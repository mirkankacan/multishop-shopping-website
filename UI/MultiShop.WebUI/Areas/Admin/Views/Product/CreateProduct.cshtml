@model MultiShop.DTOLayer.DTOs.CatalogDTOs.ProductDTOs.CreateProductDTO

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>@ViewBag.v3</h4>
                <br />
                <div class="bs-example" data-example-id="simple-table">
                    <form method="post">
                        <label>Product Name</label>
                        <input type="text" class="form-control" asp-for="ProductName" value="" />
                        <br /> 
                        <label>Product Price</label>
                        <input type="text" class="form-control" asp-for="ProductPrice" value="" />
                        <br /> 
                        <label>Product Image</label>
                        <input type="text" class="form-control" asp-for="ProductImageURL" value="" />
                        <br />
                        <label>Product's Category</label>
                        @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.CategoryValues, new {@class="form-control"})
                        <br />
                        <label>Product Description</label>
                        <textarea class="form-control" asp-for="ProductDescription" rows="5" style="resize:vertical"></textarea>
                        <br />
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

