@model MultiShop.DTOLayer.DTOs.CatalogDTOs.ProductDetailDTOs.UpdateProductDetailDTO

@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>@ViewBag.v3</h4>
                <br />
                <div class="bs-example" data-example-id="simple-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="ProductDetailID" />
                        <input type="hidden" class="form-control" asp-for="ProductID" />
                        <label>Product Detail Description</label>
                        <textarea rows="5" class="form-control" style="resize:vertical" asp-for="ProductDescription"></textarea>
                        <br />
                        <label>Product Detail Information</label>
                        <textarea rows="5" class="form-control" style="resize:vertical" asp-for="ProductInfo"></textarea>
                        <br />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>