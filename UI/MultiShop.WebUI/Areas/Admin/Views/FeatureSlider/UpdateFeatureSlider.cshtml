@model MultiShop.DTOLayer.DTOs.CatalogDTOs.FeatureSliderDTOs.UpdateFeatureSliderDTO

@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>@ViewBag.v3</h4>
                <br />
                <div class="bs-example" data-example-id="simple-table">
                    <form method="post">
                        <input type="hidden" class="form-control" asp-for="FeatureSliderID" />
                        <label>Image Title</label>
                        <input type="text" class="form-control" asp-for="Title"/>
                        <br />
                        <label>Image Description</label>
                        <input type="text" class="form-control" asp-for="Description"/>
                        <br />
                        <label>Image Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>