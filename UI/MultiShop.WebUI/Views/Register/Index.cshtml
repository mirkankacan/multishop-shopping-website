@model MultiShop.DTOLayer.DTOs.IdentityDTOs.RegisterDTOs.CreateRegisterDTO
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>MultiShop Register</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/bootstrap/css/bootstrap.min.css">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Template style -->
    <link rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/dist/css/style.css">
    <link rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/pages/et-line-font/et-line-font.css">
    <link rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/pages/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/dist/weather/weather-icons.min.css">
    <link type="text/css" rel="stylesheet" href="~/MainDownload-OvioAdmin-html5-template/html/dist/weather/weather-icons-wind.min.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body class="body-bg-color">
    <div class="wrapper">
        <div class="form-body">
            <form method="post" class="col-form" novalidate>
                <div class="col-logo"><a href="~/MainDownload-OvioAdmin-html5-template/html/index.html"><img alt="" src="~/MainDownload-OvioAdmin-html5-template/html/dist/img/logo-lg.png"></a></div>
                <header>Register</header>
                <fieldset>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Name</label>
                            <input class="form-control" placeholder="Name" type="text" required asp-for="Name">
                            <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Surname</label>
                            <input class="form-control" placeholder="Surname" type="text" required asp-for="Surname">
                            <span class="fa fa-user form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">E-mail</label>
                            <input class="form-control" placeholder="E-mail" type="text" required asp-for="Email" pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
                            <span class="fa fa-envelope form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Password</label>
                            <input class="form-control" placeholder="Password" type="password" asp-for="Password" required>
                            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="form-group has-feedback">
                            <label class="control-label">Confirm Password</label>
                            <input class="form-control" placeholder="Confirm Password" type="password" asp-for="ConfirmPassword" required>
                            <span class="fa fa-lock form-control-feedback" aria-hidden="true"></span>
                        </div>
                    </section>
                    <section>
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <label class="checkbox">
                                    <input name="TermsAndPolicy" checked="" type="checkbox" asp-for="TermsAndPolicy" required >
                                    <i></i>Agree the terms and policy
                                </label>
                            </div>
                        </div>
                    </section>
                </fieldset>
                <footer class="text-right">
                    <button type="submit" class="btn btn-info pull-right">Register</button>
                    <a href="/Login/Index" class="button button-secondary">Login</a>
                </footer>
            </form>
        </div>
    </div>
    <!-- wrapper -->
    <!-- jQuery -->
    <script src="~/MainDownload-OvioAdmin-html5-template/html/dist/js/jquery.min.js"></script>
    <script src="~/MainDownload-OvioAdmin-html5-template/html/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/MainDownload-OvioAdmin-html5-template/html/dist/js/ovio.js"></script>
</body>
</html>