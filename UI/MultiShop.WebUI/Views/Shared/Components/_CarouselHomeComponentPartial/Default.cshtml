@model List<MultiShop.DTOLayer.DTOs.CatalogDTOs.FeatureSliderDTOs.ResultFeatureSliderDTO>
@{
    int count1 = 0;
    int count2 = 0;
}
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    @foreach(var item in Model)
                    {
                        if(count1 == 0)
                        {
                            <li data-target="#header-carousel" data-slide-to="@count1" class="active"></li>             
                        }
                        else
                        {
                            <li data-target="#header-carousel" data-slide-to="@count1"></li>
                        }
                        count1++;

                    }
                  
                </ol>

                <div class="carousel-inner">

                    @foreach(var item in Model)
                    {
                        count2++;
                        if(count2 == 1)
                        {
                              <div class="carousel-item position-relative active" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="@item.ImageUrl" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.Title</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@item.Description</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                                </div>
                            </div>
                            </div>

                        }
                        else
                        {  
                            <div class="carousel-item position-relative" style="height: 430px;">
                            <img class="position-absolute w-100 h-100" src="@item.ImageUrl" style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@item.Title</h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn">@item.Description</p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                                </div>
                            </div>
                            </div>                    
                        }

                    }
                </div>
            </div>
        </div>
       @await Component.InvokeAsync("_SpecialOfferHomeComponentPartial")
    </div>
</div>